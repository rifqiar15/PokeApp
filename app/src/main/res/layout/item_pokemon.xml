<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/component_sizeable"
    android:layout_marginVertical="@dimen/component_small"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/component_sizeable">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/pokeball"/>

        <TextView
            android:id="@+id/tv_item_pokemon_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="Pokemon"
            android:textSize="@dimen/component_sizeable"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/component_sizeable"
            android:gravity="center|start"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>