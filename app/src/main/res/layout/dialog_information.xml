<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="@dimen/component_sizeable"
        android:layout_margin="@dimen/component_sizeable">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/component_sizeable"
            android:paddingVertical="@dimen/component_sizeable">

            <ImageView
                android:id="@+id/iv_dialog_information"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@android:color/holo_red_dark"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/tv_dialog_information_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/component_sizeable"
                android:gravity="center"
                android:layout_marginVertical="@dimen/component_sizeable"/>

            <TextView
                android:id="@+id/tv_dialog_information_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/component_normal"
                android:lineSpacingExtra="@dimen/component_tiny"
                android:textColor="@color/black"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>